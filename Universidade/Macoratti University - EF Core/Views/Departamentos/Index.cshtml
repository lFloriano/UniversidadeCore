@model IEnumerable<Universidade.Models.DepartamentoViewModel>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Inserir">Cadastrar Departamento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supervisor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supervisor)
            </td>
            <td>
                <a asp-action="Editar" asp-route-id="@item.DepartamentoID">Editar</a> |
                <a asp-action="Detalhes" asp-route-id="@item.DepartamentoID">Detalhes</a> |
                <a asp-action="Excluir" asp-route-id="@item.DepartamentoID">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
